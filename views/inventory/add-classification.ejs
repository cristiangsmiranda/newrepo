<%- messages() %>

<% if (errors && errors.length > 0) { %>
  <ul class="notice error">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<h1>Add Classification!</h1>
<div class="classification-form">
  <form action="/inv/add-classification" method="POST" onsubmit="console.log('Form submitted')">
    <p>Field is required</p>
    <fieldset>
      <label for="classification_name">Classification Name:</label>
      <input type="text" name="classification_name" id="classification_name" 
        required pattern="[a-zA-Z]+" 
        value="<%= classification_name ? classification_name : '' %>"><br>
      <span>Name must be alphabetic characters only</span>
      <button type="submit">Add New Classification</button>
    </fieldset>
  </form>
</div>
